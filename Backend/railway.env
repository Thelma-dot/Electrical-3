# Railway Production Environment
NODE_ENV=production
PORT=5000

# Database Configuration for Railway
DB_TYPE=postgresql
DB_USER=postgres
DB_HOST=${PGHOST}
DB_NAME=${PGDATABASE}
DB_PASSWORD=${PGPASSWORD}
DB_PORT=${PGPORT}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Security
BCRYPT_ROUNDS=10
TOKEN_EXPIRY=24h
RESET_TOKEN_EXPIRY=15m

# Frontend URL for Railway
FRONTEND_URL=${FRONTEND_URL}
